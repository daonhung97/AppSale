<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical"
xmlns:android="http://schemas.android.com/apk/res/android">
<android.support.v7.widget.Toolbar
    android:id="@+id/toolbarthongtin"
    android:background="#64b354"
    app:titleTextColor="#f1edec"
    app:title="Thông tin"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">
</android.support.v7.widget.Toolbar>
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/hinhnen"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_marginBottom="10dp"
        android:textColor="#fafafa"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="Thông tin về chúng tôi"
        android:textSize="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:background="@drawable/boder"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:layout_margin="15dp"
            android:textSize="20sp"
            android:textColor="#080808"
            android:text="Địa chỉ: Tầng 29,  Số 420 Nguyễn Văn Cừ (Ngã tư Nguyễn Văn Cừ - Nguyễn Sơn), Phường Gia Thụy, Quận Long Biên, Thành phố Hà Nội"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/boder"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".activity.ThongTinActivity" />
    </LinearLayout>

</LinearLayout>


</LinearLayout>
